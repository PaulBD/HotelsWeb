<?xml version="1.0" encoding="utf-8"?>

<configuration>
  <appSettings>
    <!-- Environment -->
    <add key="Environment" value="Dev" />

    <add key="hotels.laterooms.baseUrl" value="http://xmlfeed.laterooms.com"/>
    <add key="hotels.laterooms.affiliateId" value="15695"/>
    <add key="hotels.laterooms.storageConnection" value="DefaultEndpointsProtocol=https;AccountName=sflondontest;AccountKey=g3eMV+w9OyKdzLMmwfGF9AKOoSy4jNIv++Ts7+ywieMxTOWWI13vyKNV61428L2SN3MyH37zvKpa6emV+pVeuA==" />
  </appSettings>
  <!-- Configure the system -->
  <system.web>
    <globalization culture="en-GB"/>
    <httpRuntime maxRequestLength="1048576" requestValidationMode="2.0" targetFramework="4.5"/>
    <customErrors mode="Off"/>
    <httpHandlers>
      <add path="api*" type="ServiceStack.HttpHandlerFactory, ServiceStack" verb="*"/>
    </httpHandlers>
    <compilation debug="true"/>
  </system.web>
  <!-- Required for IIS7 -->
  <system.webServer>
    <httpProtocol>
      <customHeaders>
        <add name="Access-Control-Allow-Headers" value="Origin, X-Requested-With, Content-Type, Accept"/>
      </customHeaders>
    </httpProtocol>
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="1073741824"/>
      </requestFiltering>
    </security>
    <validation validateIntegratedModeConfiguration="false"/>
    <handlers>
      <add path="*" name="ServiceStack.Factory" type="ServiceStack.HttpHandlerFactory, ServiceStack" verb="*" preCondition="integratedMode" resourceType="Unspecified" allowPathInfo="true"/>
      <remove name="ExtensionlessUrlHandler-Integrated-4.0"/>
      <remove name="OPTIONSVerbHandler"/>
      <remove name="TRACEVerbHandler"/>
      <add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="*" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0"/>
    </handlers>
    <!-- This is to allow the Azure Storage container to serve fonts  -->
    <staticContent>
      <remove fileExtension="svg"/>
      <remove fileExtension="eot"/>
      <remove fileExtension="woff"/>
      <remove fileExtension="ttf"/>
      <remove fileExtension=".svg"/>
      <remove fileExtension=".eot"/>
      <remove fileExtension=".woff"/>
      <remove fileExtension=".ttf"/>
      <mimeMap fileExtension=".svg" mimeType="image/svg+xml"/>
      <mimeMap fileExtension=".eot" mimeType="application/vnd.ms-fontobject"/>
      <mimeMap fileExtension=".woff" mimeType="application/font-woff"/>
      <mimeMap fileExtension=".ttf" mimeType="application/vnd.ms-fontobject"/>
    </staticContent>
    <caching>
      <profiles>
        <add extension=".html" kernelCachePolicy="DontCache" policy="DontCache"/>
      </profiles>
    </caching>
  </system.webServer>
</configuration>